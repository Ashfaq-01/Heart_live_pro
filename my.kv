WindowManager:
    Open_screen:







<Open_screen>:
    name: "Open_screen"

    age : age
    sex : sex
    cp : cp
    trestbps: trestbps
    chol : chol
    fbs : fbs
    restecg : restecg
    thalach : thalach
    exang : exang
    oldpeak : oldpeak




    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2



            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":1}
                text: "Chest pain(1-3): "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":1}
                size_hint: 0.2, 0.05
                id: cp
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.95}
                text: "Age: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.95}
                size_hint: 0.2, 0.05
                id: age
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.9}
                text: "Systolic BP: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.9}
                size_hint: 0.2, 0.05
                id: trestbps
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4


            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.8}
                text: "Cholestrol(mg/dl): "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.2, 0.05
                id: chol
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.7}
                text: "Fasting blood sugar: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.7}
                size_hint: 0.5, 0.05
                id: fbs
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4


            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.6}
                text: "ECG(Binary): "
                font_size: (root.width**2 + root.height**2) / 16**4


            TextInput:
                pos_hint: {"x":0.5, "top":0.6}
                size_hint: 0.5, 0.05
                id: restecg
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.55}
                text: "Sex(1 male 0 female): "
                font_size: (root.width**2 + root.height**2) / 16**4


            TextInput:
                pos_hint: {"x":0.5, "top":0.55}
                size_hint: 0.5, 0.05
                id: sex
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4


            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.5}
                text: "Max heartrate: "
                font_size: (root.width**2 + root.height**2) / 16**4



            TextInput:
                pos_hint: {"x":0.5, "top":0.5}
                size_hint: 0.5, 0.05
                id: thalach
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4


            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.4}
                text: "Angia(Binary): "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.4}
                size_hint: 0.5, 0.05
                id: exang
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4


            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.3}
                text: "Oldpeak: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.3}
                size_hint: 0.5, 0.05
                id: oldpeak
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4



        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:

                root.predict()


